<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.nickellis.towers.sample">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name="me.nickellis.towers.sample.MainActivity"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="me.nickellis.towers.sample.AboutActivity"
        android:label="@string/about"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme.NoActionBar"/>
    <activity
        android:name="me.nickellis.towers.sample.MasterDetailActivity"
        android:label="@string/master_detail_demo"
        android:launchMode="singleTop"
        android:theme="@style/AppTheme.NoActionBar"/>
  </application>

</manifest>