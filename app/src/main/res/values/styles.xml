<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="TextBase">
    <item name="android:textColor">@color/text</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="TextBaseBold" parent="TextBase">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="TextBody1" parent="TextBase">
  </style>

  <style name="TextSubheader" parent="TextBase">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="TextHeader" parent="TextBaseBold">
    <item name="android:textSize">16sp</item>
  </style>

  <style name="ButtonPrimary" parent="TextBaseBold">
    <item name="android:background">@drawable/button_primary_pill</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
  </style>

  <style name="ButtonPrimaryLarge" parent="ButtonPrimary">
    <item name="android:textSize">20sp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:paddingLeft">18dp</item>
    <item name="android:paddingRight">18dp</item>
  </style>

</resources>
